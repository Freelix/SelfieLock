<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

<RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/textUser"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:textSize="18sp"
    android:textColor="@color/grey"
    android:gravity="center_horizontal"
  />  
    
  <TextView
    android:id="@+id/textOnOffMessage"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:text="@string/messageActivate"
    android:textSize="14sp"
    android:textColor="@color/grey"
    android:layout_below="@id/textUser"
    android:gravity="center_horizontal"
  />

  <ImageView
	android:id="@+id/imgButtonOnOff"
	android:contentDescription="@string/imgButtonOnOffDesc"
	android:layout_width="fill_parent"
	android:layout_height="200dp"
	android:src="@drawable/off_button"
	android:layout_below="@id/textOnOffMessage"
	android:layout_centerHorizontal="true"
	android:layout_marginTop="40dp"	    
  />
  
  <TextView
    android:id="@+id/textSearchingMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:text="@string/searchingForConnOff"
    android:textSize="14sp"
    android:textColor="@color/grey"
    android:layout_below="@id/imgButtonOnOff"
  />
  
  <TextView
    android:id="@+id/bluetoothOnOff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:text="@string/bluetoothOff"
    android:textSize="14sp"
    android:textColor="@color/grey"
    android:layout_below="@id/textSearchingMessage"
  />
  
  <Button
    android:id="@+id/btnLogOut"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:text="@string/logOut"
    android:layout_below="@id/bluetoothOnOff"
  />
  
</RelativeLayout>
</ScrollView>