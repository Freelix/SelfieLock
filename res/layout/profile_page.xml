<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

<RelativeLayout
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
	  
	  <ImageView
	    android:id="@+id/imgProfile"
	    android:contentDescription="@string/ImgProfileDesc"
	    android:layout_width="fill_parent"
	    android:layout_height="130dp"
	    android:src="@drawable/ic_launcher"	    
	  />
	  
	  <TextView 
	    android:id="@+id/labelProfile"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/Profile"
	    android:textStyle="bold"
	    android:textColor="@color/lightBlue"
	    android:textSize="30sp"
	    android:layout_below="@id/imgProfile"
	    android:layout_marginTop="30dp"
	    android:focusable="true"
	    android:focusableInTouchMode="true"
	  />
	  
	  <!-- Items start here -->
	  
	  <TextView 
	    android:id="@+id/labelFirstName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/FirstName"
	    android:layout_below="@id/labelProfile"
	    android:layout_marginTop="40dp"
	    style="@style/ProfileLabelItem"
	  />
	   
	  <EditText 
	    android:id="@+id/textFirstName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_toRightOf="@id/labelFirstName"
	    android:layout_below="@id/labelProfile"
	    android:layout_marginTop="27dp"
	    style="@style/ProfileTextItem"
	  />
	  
	  <TextView 
	    android:id="@+id/labelLastName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/LastName"
	    android:layout_below="@id/textFirstName"
	    style="@style/ProfileLabelItem"
	  />
	   
	  <EditText 
	    android:id="@+id/textLastName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_toRightOf="@id/labelLastName"
	    android:layout_below="@id/textFirstName"
	    style="@style/ProfileTextItem"
	  />
	  
	  <TextView 
	    android:id="@+id/labelSexe"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/Sexe"
	    android:layout_below="@id/textLastName"
	    style="@style/ProfileLabelItem"
	  />
	  
	  <RadioGroup
        android:id="@+id/groupRadioSexe"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_below="@id/textLastName"
    	android:layout_toRightOf="@id/labelSexe"
    	android:layout_centerHorizontal="true"
      >
	      <RadioButton 
	      	android:id="@+id/radioMan"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	      	android:text="@string/Man"
	      />
	      <RadioButton 
	      	android:id="@+id/radioWoman"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	      	android:layout_marginLeft="30dp"
	      	android:text="@string/Woman"
	      />
      </RadioGroup>
	  
	  <TextView 
	    android:id="@+id/labelAge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/Age"
	    android:layout_below="@id/groupRadioSexe"
	    style="@style/ProfileLabelItem"
	  />
	   
	  <EditText 
	    android:id="@+id/textAge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_toRightOf="@id/labelAge"
	    android:layout_below="@id/groupRadioSexe"
	    style="@style/ProfileTextItem"
	  />
	  
	  <TextView 
	    android:id="@+id/labelHairColor"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/HairColor"
	    android:layout_below="@id/textAge"
	    style="@style/ProfileLabelItem"
	  />
	   
	  <EditText 
	    android:id="@+id/textHairColor"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_toRightOf="@id/labelHairColor"
	    android:layout_below="@id/textAge"
	    style="@style/ProfileTextItem"
	  />
	  
	  <TextView 
	    android:id="@+id/labelEyesColor"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/EyesColor"
	    android:layout_below="@id/textHairColor"
	    style="@style/ProfileLabelItem"
	  />
	   
	  <EditText 
	    android:id="@+id/textEyesColor"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_toRightOf="@id/labelEyesColor"
	    android:layout_below="@id/textHairColor"
	    style="@style/ProfileTextItem"
	  />
	  
	  <TextView 
	    android:id="@+id/labelUsername"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/Username"
	    android:layout_below="@id/textEyesColor"
	    style="@style/ProfileLabelItem"
	  />
	   
	  <EditText 
	    android:id="@+id/textUsername"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_toRightOf="@id/labelUsername"
	    android:layout_below="@id/textEyesColor"
	    style="@style/ProfileTextItem"
	  />
	  
	  <TextView 
	    android:id="@+id/labelPassword"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:text="@string/Password"
	    android:layout_below="@id/textUsername"
	    style="@style/ProfileLabelItem"
	  />
	   
	  <EditText 
	    android:id="@+id/textPassword"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_toRightOf="@id/labelPassword"
	    android:layout_below="@id/textUsername"
	    style="@style/ProfileTextItem"
	  />
	  
	  <Button 
	    android:id="@+id/saveProfile"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:text="@string/Save"
	    android:layout_below="@id/textPassword"
	    android:layout_marginTop="16dp"
	    android:layout_centerHorizontal="true"
      />
	  
	</RelativeLayout>
</ScrollView>